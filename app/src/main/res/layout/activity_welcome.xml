<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comuiappcenter.facebook.m.legacy.User.WelcomeActivity">

    <TextView
        android:text="어서오세요!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="전공"
        android:ems="10"
        android:layout_below="@+id/edittext_welcome_nickname"
        android:layout_alignParentStart="true"
        android:id="@+id/edittext_welcome_major" />

    <Button
        android:text="확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_welcome_major"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="91dp"
        android:id="@+id/button_welcom_accept" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="학번"
        android:ems="10"
        android:layout_marginTop="60dp"
        android:id="@+id/edittext_welcome_id"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="비밀번호"
        android:ems="10"
        android:id="@+id/edittext_welcome_pw"
        android:layout_below="@+id/edittext_welcome_id"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="닉네임"
        android:ems="10"
        android:id="@+id/edittext_welcome_nickname"
        android:layout_below="@+id/edittext_welcome_pw"
        android:layout_alignParentStart="true" />


</RelativeLayout>
